<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="anchorPane" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Recompense">

    <!-- Section Formulaire -->
    <Pane layoutX="14.0" layoutY="37.0" prefHeight="416.0" prefWidth="340.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <!-- Type de Récompense -->
        <Label layoutX="20.0" layoutY="20.0" text="Type de Récompense:" />
        <TextField fx:id="txtType" layoutX="20.0" layoutY="40.0" prefWidth="280.0" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5;" />

        <!-- Date d'Attribution -->
        <Label layoutX="20.0" layoutY="80.0" text="Date d'Attribution:" />
        <DatePicker fx:id="dateAttribution" layoutX="20.0" layoutY="100.0" prefWidth="280.0" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5;" />

        <!-- Statut de la Récompense -->
        <Label layoutX="20.0" layoutY="140.0" text="Statut de la Récompense:" />
        <ComboBox fx:id="cmbStatut" layoutX="20.0" layoutY="160.0" prefWidth="280.0" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Expired" />
                    <String fx:value="Received" />
                    <String fx:value="Waiting" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Programme associé -->
        <Label layoutX="20.0" layoutY="200.0" text="Programme associé:" />
        <ComboBox fx:id="cmbProgrammes" layoutX="20.0" layoutY="220.0" prefWidth="280.0" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC;" />

        <!-- Boutons -->
        <!-- Boutons -->
        <Button fx:id="btnAjouter" layoutX="30.0" layoutY="260.0" onAction="#creer" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Créer Récompense" />
        <Button fx:id="btnSupprimer" layoutX="150.0" layoutY="260.0" onAction="#supprimerRecompense" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Supprimer Récompense" />
      <Button fx:id="btnModifier" layoutX="102.0" layoutY="327.0" onAction="#ModifierRecompense" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: #3556dc; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Modifier Recompense" />


    </Pane>

    <!-- Liste des Récompenses -->
    <Pane layoutX="380.0" layoutY="20.0" prefHeight="450.0" prefWidth="280.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Liste des Récompenses" />
        <ListView fx:id="listViewRecompenses" layoutX="20.0" layoutY="40.0" prefHeight="380.0" prefWidth="240.0" />
    </Pane>

</AnchorPane>
