<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane fx:id="anchorPane" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Recompense">

    <!-- Section Formulaire -->
    <Pane layoutX="20.0" layoutY="20.0" prefWidth="340.0" prefHeight="300.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10;">
        <!-- Type de Récompense -->
        <Label layoutX="20.0" layoutY="20.0" text="Type de Récompense:" />
        <TextField fx:id="txtType" layoutX="20.0" layoutY="40.0" prefWidth="280.0" />

        <!-- Date d'Attribution -->
        <Label layoutX="20.0" layoutY="80.0" text="Date d'Attribution:" />
        <DatePicker fx:id="dateAttribution" layoutX="20.0" layoutY="100.0" prefWidth="280.0" />

        <!-- Statut de la Récompense -->
        <Label layoutX="20.0" layoutY="140.0" text="Statut de la Récompense:" />
        <ComboBox fx:id="cmbStatut" layoutX="20.0" layoutY="160.0" prefWidth="280.0" >
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Expired" />
                    <String fx:value="Received" />
                    <String fx:value="Waiting" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Boutons -->
        <Button fx:id="btnAjouter" layoutX="20.0" layoutY="210.0" onAction="#ajouterRecompense" text="Ajouter"
                style="-fx-background-color: #2865a7; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button fx:id="btnSupprimer" layoutX="140.0" layoutY="210.0" onAction="#supprimerRecompense" text="Supprimer"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" />
    </Pane>

    <!-- Liste des Récompenses -->
    <Pane layoutX="380.0" layoutY="20.0" prefWidth="280.0" prefHeight="450.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10;">
        <Label layoutX="20.0" layoutY="10.0" text="Liste des Récompenses" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ListView fx:id="listViewRecompenses" layoutX="20.0" layoutY="40.0" prefHeight="380.0" prefWidth="240.0" />
    </Pane>

</AnchorPane>
