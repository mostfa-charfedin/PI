<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Alert.AlertType?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.AddPostController"
            style="-fx-background-color: linear-gradient(to bottom, #A0D8EF, #F7F8FA);">
    <children>
        <VBox spacing="20" alignment="CENTER" prefWidth="420" prefHeight="320"
              style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-border-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 10, 0.5, 2, 2);">

            <!-- Title Label -->
            <Label text="Add A New Post"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 10;"/>

            <!-- Label for Content -->
            <Label text="Content:"
                   style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>

            <!-- TextField for Content -->
            <TextField fx:id="txtContent" promptText="Enter post content"
                       style="-fx-background-color: white; -fx-border-color: #3498DB; -fx-border-radius: 10px; -fx-font-size: 14px; -fx-padding: 10;"/>

            <!-- Submit Button with yellow color -->
            <Button fx:id="submitButton" text="Submit" onAction="#submitPost"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, #f39c12, 15, 0.5, 0, 2);"/>
        </VBox>
    </children>
</AnchorPane>