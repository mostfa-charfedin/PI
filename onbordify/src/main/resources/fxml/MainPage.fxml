<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainPage">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" alignment="CENTER" prefWidth="220" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #bbbcfb, #8fa6ff);                      -fx-padding: 20; -fx-alignment: center;">

            <!-- Logo or Profile Picture -->
            <ImageView fx:id="logo" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../assests/logo.png" />
                </image>
            </ImageView>

            <Button fx:id="btnPage3" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Gestion Users" />

            <Button fx:id="btnPage2" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Score List" />

            <!-- Navigation Buttons -->
            <Button fx:id="btnPage1" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Profil" />

            <Button fx:id="btnPage4" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Projet" />

            <Button fx:id="btnPage5" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Program BE" />

            <Button fx:id="btnPage7" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="fedi" />

            <!-- Spacer to push logout button down -->
            <Pane VBox.vgrow="ALWAYS" />
         <Button fx:id="btnPage61" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="souhir" />
         <Button fx:id="btnPage62" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="souhir" />

            <Button fx:id="btnPage6" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Quiz" />

            <!-- Logout Button -->
            <Button fx:id="btnLogout" onAction="#logout" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 10px; -fx-pref-width: 180px;                            -fx-background-radius: 10; -fx-cursor: hand;" text="Logout" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #E3F2FD;">
        </StackPane>
    </center>

</BorderPane>
