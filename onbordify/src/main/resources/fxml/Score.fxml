<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ScoreControl">
    <children>
        <!-- ListView -->
        <ListView fx:id="listview" prefHeight="241.0" prefWidth="755.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60" />
        <Label fx:id="messagelist" layoutX="20.0" layoutY="19.0" />
      <HBox layoutX="26.0" layoutY="21.0" prefHeight="32.0" prefWidth="760.0" spacing="34.0">
         <children>
              <Label prefHeight="26.0" prefWidth="83.0" text="Search bar" />
              <!-- Search Field -->
              <TextField fx:id="rechercheFild" prefHeight="26.0" prefWidth="170.0" />
              <ComboBox fx:id="quizFilter" onAction="#filterByQuiz" prefHeight="26.0" prefWidth="88.0" />
              <!-- Delete Button -->
              <Button fx:id="deleteButton" onAction="#deleteScore" prefHeight="26.0" prefWidth="95.0" text="Delete" />
         </children>
      </HBox>
    </children>
</AnchorPane>
