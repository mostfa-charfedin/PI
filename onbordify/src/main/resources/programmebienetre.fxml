<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.programmebienetre">

   <!-- Conteneur Principal -->
   <VBox alignment="TOP_LEFT" layoutX="30.0" layoutY="20.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

      <!-- Titre Principal -->
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Gestion des Programmes de Bien-Être" />

      <!-- Liste des Programmes -->
      <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Liste des Programmes" />
      </VBox>

      <!-- Séparateur -->
      <Line endX="600" stroke="#DDDDDD" strokeWidth="1" />

      <!-- Titre -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Titre :" />
         <TextField fx:id="txtTitre" prefWidth="300" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5;" />
      </HBox>

      <!-- Type -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Type :" />
         <ComboBox fx:id="cmbType" prefWidth="300" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC;">
            <items>
               <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Running" />
                  <String fx:value="Competition" />
                  <String fx:value="Horse Riding" />
                  <String fx:value="Padel" />
                  <String fx:value="Trip" />
               </FXCollections>
            </items>
         </ComboBox>
      </HBox>

      <!-- Description -->
      <VBox spacing="5">
         <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Description :" />
         <TextArea fx:id="txtDescription" prefHeight="100" prefWidth="400" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5;" wrapText="true" />
      </VBox>

      <!-- Boutons -->
      <HBox spacing="10">
         <!-- Bouton Ajouter Programme -->
         <Button fx:id="btnAjouter" onAction="#ajouterProgramme" style="-fx-background-color: #CD5C5C; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Ajouter Programme" />

         <!-- Bouton Créer Récompense -->
         <Button fx:id="btnCreateRecompense" onAction="#createRecompense" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Créer Récompense" />
         <Button fx:id="btnModifier" onAction="#modifierProgramme" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" text="Modifier Programme" />
      </HBox>

      <!-- Liste des Programmes -->
      <ListView fx:id="listViewProgrammes" prefHeight="350.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5px;" />

   </VBox>

</AnchorPane>