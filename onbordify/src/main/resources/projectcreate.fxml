<?xml version="1.0" encoding="UTF-8"?>

   <?import javafx.geometry.Insets?>
   <?import javafx.scene.control.*?>
   <?import javafx.scene.layout.*?>

   <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffe6f0;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Projectcreate">
      <children>
         <VBox alignment="CENTER" spacing="12" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0"
               style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 5);">

            <Label text="Create New Project" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d63384;" />

            <TextField fx:id="txtTitle" promptText="Project Title" maxWidth="600" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #ffffff; -fx-border-color: #d63384; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <TextArea fx:id="txtDescription" promptText="Project Description" maxWidth="600" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: #ffffff; -fx-border-color: #d63384; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <!-- Styled ComboBox -->
            <ComboBox fx:id="cbProjectManager" promptText="Select Project Manager" maxWidth="600"
                      style="-fx-background-color: #ffffff; -fx-border-color: #d63384; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <!-- Button Container -->
            <HBox spacing="10">
               <Button text="CrÃ©er un projet" fx:id="btnCreate" onAction="#handleCreateProject" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #d63384; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 8px;" />
               <Button text="Annuler" fx:id="btnViewProjects" onAction="#handleViewProjects" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #ff69b4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 8px;" />
            </HBox>

            <!-- Status Label -->
            <Label fx:id="lblStatus" text="" style="-fx-text-fill: red; -fx-font-weight: bold;" />
         </VBox>
      </children>
   </AnchorPane>
