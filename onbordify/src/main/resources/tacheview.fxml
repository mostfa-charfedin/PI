<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Tacheview">

    <children>
        <VBox alignment="CENTER" spacing="12" style="-fx-background-color: white; -fx-padding: 20px;
            -fx-border-radius: 10px; -fx-background-radius: 10px;
            -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 5);"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #007acc;" text="Gestion des Tâches" />

            <!-- Progress Section -->
            <VBox spacing="8" style="-fx-padding: 10px;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ProgressBar fx:id="progressBar" prefWidth="450" style="-fx-accent: #27ae60;" />
                    <Label fx:id="progressLabel" text="0%" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </HBox>
                <ProgressIndicator fx:id="progressIndicator" prefWidth="40" prefHeight="40" />
            </VBox>

            <!-- ListView to display tasks -->
            <ListView fx:id="taskListView" maxWidth="600" style="-fx-background-color: #ffffff; -fx-border-color: #007acc;                              -fx-border-radius: 8px; -fx-padding: 8px;" VBox.vgrow="ALWAYS" />

            <!-- Buttons for task actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnCreateTask" onAction="#handleCreateTask" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-padding: 10px 20px; -fx-border-radius: 8px;" text="➕ Ajouter" />

                <Button fx:id="btnEditTask" onAction="#handleEditTask" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-padding: 10px 20px; -fx-border-radius: 8px;" text="✏️ Modifier" />

                <Button fx:id="btnDeleteTask" onAction="#handleDeleteTask" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-padding: 10px 20px; -fx-border-radius: 8px;" text="❌ Supprimer" />

                <Button fx:id="btnGeneratePdf" onAction="#handleExportToPDF" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-padding: 10px 20px; -fx-border-radius: 8px;" text="📋 Exporter" />
            </HBox>

            <!-- Status Label -->
            <Label fx:id="lblStatus" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />

        </VBox>
    </children>
</AnchorPane>
