<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f9f9f9;"
            xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Taskcreate">

    <children>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px;
                     -fx-border-radius: 10px; -fx-background-radius: 10px;"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #007acc;" text="Create Task" />

            <TextField fx:id="txtTitle" promptText="Task Title"
                       style="-fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #007acc;" />

            <TextArea fx:id="txtDescription" promptText="Task Description" wrapText="true"
                      style="-fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #007acc;" />

            <TextField fx:id="txtNom" promptText="User First Name"
                       style="-fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #007acc;" />

            <TextField fx:id="txtPrenom" promptText="User Last Name"
                       style="-fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #007acc;" />

            <ComboBox fx:id="cmbProjects" promptText="Select Project"
                      style="-fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #007acc;" />

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnSubmit" text="Create" onAction="#handleCreateTask"
                        style="-fx-background-color: #28a745; -fx-text-fill: white;
                               -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white;
                               -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
            </HBox>

            <Label fx:id="lblStatus" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />
        </VBox>
    </children>
</AnchorPane>
