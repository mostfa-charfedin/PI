<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddResourceController">

    <!-- Form Title -->
    <Label layoutX="219.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="➕ Ajouter une Ressource" AnchorPane.leftAnchor="219.0" AnchorPane.topAnchor="14.0" />

    <!-- Title Input -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="50">
        <Label style="-fx-font-size: 14px;" text="📖 Titre:" />
        <TextField fx:id="titleField" promptText="Entrez le titre" />
    </HBox>

    <!-- Type Selection (Populate in Controller) -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="100">
        <Label style="-fx-font-size: 14px;" text="📂 Type:" />
        <ComboBox fx:id="typeComboBox" />
    </HBox>

    <!-- Description Input -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="150">
        <Label style="-fx-font-size: 14px;" text="📝 Description:" />
        <TextArea fx:id="descriptionField" promptText="Entrez une description" wrapText="true" />
    </HBox>

    <!-- Link Input -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="210" />

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="300" />
     <Button fx:id="btnCancel" layoutX="371.0" layoutY="408.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;" text="❌ Annuler" />
     <Button fx:id="btnSave" layoutX="263.0" layoutY="408.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold;" text="✅ Ajouter" />
     <TextField fx:id="linkField" layoutX="86.0" layoutY="372.0" promptText="https://..." />
     <Label layoutX="23.0" layoutY="375.0" style="-fx-font-size: 14px;" text="🔗 Lien:" />

</AnchorPane>
