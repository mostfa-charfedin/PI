<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FavorisController" spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <!-- Title Section -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Favoris" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    </HBox>

    <!-- ListView for displaying Favoris Titles -->
    <ListView fx:id="favorisListView" prefHeight="400" prefWidth="300" style="-fx-background-color: #ffffff; -fx-border-radius: 5; -fx-border-color: #007bff; -fx-font-size: 14px; -fx-padding: 10;">
    </ListView>

    <!-- Button Section to return to the previous screen -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Return" fx:id="btnRetour" onAction="#handleRetour" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;" />
    </HBox>
</VBox>

