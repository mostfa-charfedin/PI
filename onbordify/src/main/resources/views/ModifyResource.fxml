<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.ModifyResourceController">
    <!-- Conteneur principal -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f9; padding: 20px;">

        <!-- Titre de la fenÃªtre -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifier Ressource" />

        <!-- Champ pour le titre de la ressource -->
        <VBox maxWidth="400" spacing="10">
            <Label text="Titre:" />
            <TextField fx:id="titleField" prefWidth="300" promptText="Entrez le titre de la ressource" />
        </VBox>

        <!-- Champ pour le type de ressource (ComboBox) -->
        <HBox spacing="10">
            <Label style="-fx-font-size: 14px;" text="ðŸ“‚ Type:" />
            <ComboBox fx:id="typeComboBox" />
        </HBox>

        <!-- Champ pour la description de la ressource -->
        <VBox maxWidth="400" spacing="10">
            <Label text="Description:" />
            <TextArea fx:id="descriptionField" prefHeight="100" prefWidth="300" promptText="Entrez une description de la ressource" />
        </VBox>

        <!-- Champ pour le lien de la ressource -->
        <VBox maxWidth="400" spacing="10">
            <Label text="Lien:" />
            <TextField fx:id="linkField" prefWidth="300" promptText="Entrez le lien de la ressource" />
        </VBox>
         <!-- Bouton pour sauvegarder les modifications -->
         <Button fx:id="btnSave" onAction="#saveChanges" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Enregistrer" />

        <!-- Zone des boutons -->
        <HBox alignment="CENTER" spacing="20">

            <!-- Bouton pour annuler -->
            <Button fx:id="btnCancel" onAction="#closeWindow" prefWidth="100" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Annuler" />
        </HBox>

    </VBox>
</AnchorPane>
