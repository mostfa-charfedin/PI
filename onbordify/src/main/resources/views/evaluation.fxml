<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controllers.EvaluationController">
    <BorderPane style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #80deea); -fx-padding: 10;">
        <top>
            <VBox spacing="3">
                <MenuBar style="-fx-background-color: #32b59e;">
                    <Menu text="Fichier">
                        <MenuItem text="Nouveau" />
                        <MenuItem fx:id="ouvrirMenuItem" text="Ouvrir" />
                        <MenuItem text="Enregistrer" />
                        <MenuItem text="Quitter" />
                    </Menu>
                    <Menu text="Édition">
                        <MenuItem text="Copier" />
                        <MenuItem text="Coller" />
                    </Menu>
                    <Menu text="Aide">
                        <MenuItem text="À propos" />
                    </Menu>
                </MenuBar>
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #E3F2FD; -fx-padding: 10; -fx-background-radius: 8;">
                    <Label style="-fx-font-size: 38px; -fx-font-weight: bold;" text="Advanced Assessment Dashboard" />
                    <HBox alignment="CENTER_RIGHT" spacing="8" HBox.hgrow="ALWAYS">
                        <Button style="-fx-background-color: transparent;" text="Home" />
                        <Button style="-fx-background-color: transparent;" text="Settings" />
                        <Button style="-fx-background-color: transparent;" text="Disconnect" />
                    </HBox>
                </HBox>
            </VBox>
        </top>

        <center>
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <Tab text="Tableau de Bord">
                    <VBox spacing="20" style="-fx-padding: 15;">
                        <HBox spacing="30" alignment="CENTER" style="-fx-padding: 10;">
                            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 1, 1);">
                                <Label text="Average Score" style="-fx-font-size: 16px; -fx-text-fill: #888;" />
                                <Label fx:id="averageScoreLabel" text="3.4/10" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2196f3;" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 1, 1);">
                                <Label text="Highest Score" style="-fx-font-size: 16px; -fx-text-fill: #888;" />
                                <Label fx:id="highestScoreLabel" text="5/10" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #43a047;" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 1, 1);">
                                <Label text="Lowest Score" style="-fx-font-size: 16px; -fx-text-fill: #888;" />
                                <Label fx:id="lowestScoreLabel" text="1/10" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e53935;" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 1, 1);">
                                <Label text="Total Resources" style="-fx-font-size: 16px; -fx-text-fill: #888;" />
                                <Label fx:id="totalResourcesLabel" text="7" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #00bcd4;" />
                            </VBox>
                        </HBox>
                        <HBox spacing="20">
                            <TableView fx:id="resourcesTable" prefHeight="340" prefWidth="600" style="-fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                                <columns>
                                    <TableColumn fx:id="titreColumn" prefWidth="250" text="Ressource" />
                                    <TableColumn fx:id="noteColumn" prefWidth="150" text="Rate" />
                                    <TableColumn fx:id="satisfactionColumn" prefWidth="200" text="Satisfaction" />
                                </columns>
                            </TableView>
                        </HBox>
                        <VBox spacing="20">
                            <VBox prefWidth="600" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Outstanding Resources" />
                                <TableView fx:id="bestRatedTable" prefHeight="190" style="-fx-background-color: #f5f5f5; -fx-table-cell-border-color: transparent;">
                                    <columns>
                                        <TableColumn fx:id="bestRatedTitleColumn" prefWidth="350" text="Resource Title" style="-fx-font-weight: bold;" />
                                        <TableColumn fx:id="bestRatedNoteColumn" prefWidth="150" text="Performance Score" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
                                    </columns>
                                </TableView>
                            </VBox>
                            <VBox prefWidth="600" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Resources Needing Improvement" />
                                <TableView fx:id="resourcesToImproveTable" prefHeight="190" style="-fx-background-color: #f5f5f5; -fx-table-cell-border-color: transparent;">
                                    <columns>
                                        <TableColumn fx:id="resourcesToImproveTitleColumn" prefWidth="350" text="Resource Title" style="-fx-font-weight: bold;" />
                                        <TableColumn fx:id="resourcesToImproveNoteColumn" prefWidth="150" text="Performance Score" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f;" sortType="ASCENDING" sortable="true" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </VBox>
                    </VBox>
                </Tab>

                <Tab text="Schémas">
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 15;">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Satisfaction Pattern" />
                        <HBox alignment="CENTER" spacing="20">
                            <StackPane prefHeight="380" prefWidth="380" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                                <PieChart fx:id="satisfactionPieChart" />
                            </StackPane>
                            <StackPane prefHeight="380" prefWidth="380" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                                <LineChart fx:id="trendLineChart">
                                    <xAxis>
                                        <CategoryAxis fx:id="lineChartXAxis" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="lineChartYAxis" label="Satisfaction" />
                                    </yAxis>
                                </LineChart>
                            </StackPane>
                        </HBox>
                        <VBox prefWidth="800" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.4, 2, 2);">
                            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Category Breakdown" />
                            <TableView fx:id="categoryBreakdownTable" prefHeight="250" style="-fx-background-color: #f5f5f5; -fx-table-cell-border-color: transparent;">
                                <columns>
                                    <TableColumn fx:id="categoryNameColumn" prefWidth="300" text="Category" style="-fx-font-weight: bold;" />
                                    <TableColumn fx:id="categoryCountColumn" prefWidth="250" text="Number of Resources" style="-fx-font-weight: bold;" />
                                    <TableColumn fx:id="categoryAverageColumn" prefWidth="250" text="Average Score" style="-fx-font-weight: bold;" />
                                </columns>
                            </TableView>
                        </VBox>
                    </VBox>
                </Tab>
            </TabPane>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-background-color: #e0f7fa; -fx-background-radius: 8;">
                <Label text="© 2025 My Application" />
                <Label text="Version 1.0" />
            </HBox>
        </bottom>
    </BorderPane>
</ScrollPane>