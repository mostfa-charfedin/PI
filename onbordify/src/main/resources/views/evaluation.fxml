<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EvaluationController"
            style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #80deea); -fx-padding: 20;">
    <!-- Top: MenuBar et barre d'outils -->
    <top>
        <VBox spacing="5">
            <MenuBar style="-fx-background-color: #004d40;">
                <menus>
                    <Menu text="Fichier" style="-fx-text-fill: white;">
                        <items>
                            <MenuItem text="Nouveau"/>
                            <MenuItem text="Ouvrir"/>
                            <MenuItem text="Enregistrer"/>

                            <MenuItem text="Quitter"/>
                        </items>
                    </Menu>
                    <Menu text="Édition" style="-fx-text-fill: white;">
                        <items>
                            <MenuItem text="Copier"/>
                            <MenuItem text="Coller"/>
                        </items>
                    </Menu>
                    <Menu text="Aide" style="-fx-text-fill: white;">
                        <items>
                            <MenuItem text="À propos"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #00695c; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Dashboard d'Évaluation Avancé" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <Button text="Accueil" style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-text-fill: white;"/>
                    <Button text="Paramètres" style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-text-fill: white;"/>
                    <Button text="Déconnexion" style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-text-fill: white;"/>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- Left: Panneau des filtres et recherche -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #b2dfdb; -fx-background-radius: 10;">
            <Label text="Filtres" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #004d40;"/>
            <TextField fx:id="searchField" promptText="Rechercher une ressource..."
                       style="-fx-pref-width: 240px; -fx-font-size: 14px; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Type:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
                <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" promptText="Sélectionner"
                          style="-fx-pref-width: 220px; -fx-font-size: 14px; -fx-background-color: #f1f1f1; -fx-background-radius: 8;"/>
                <Label text="Début:" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
                <DatePicker fx:id="datePickerStart" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Début"
                            style="-fx-font-size: 14px; -fx-background-color: #f1f1f1; -fx-background-radius: 8;"/>
                <Label text="Fin:" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
                <DatePicker fx:id="datePickerEnd" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Fin"
                            style="-fx-font-size: 14px; -fx-background-color: #f1f1f1; -fx-background-radius: 8;"/>
                <Label text="Note Min:" GridPane.rowIndex="3" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
                <ComboBox fx:id="minRatingComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Note minimale"
                          style="-fx-pref-width: 220px; -fx-font-size: 14px; -fx-background-color: #f1f1f1; -fx-background-radius: 8;"/>
            </GridPane>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Appliquer" style="-fx-font-size: 14px; -fx-background-color: #00796b; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 8;"/>
                <Button text="Réinitialiser" style="-fx-font-size: 14px; -fx-background-color: #004d40; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 8;"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center: Contenu principal avec TabPane -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: transparent;">
            <!-- Onglet Tableau de Bord -->
            <Tab text="Tableau de Bord">
                <VBox spacing="30" style="-fx-padding: 20;">
                    <HBox spacing="30">
                        <!-- Tableau de ressources -->
                        <TableView fx:id="resourcesTable" prefWidth="600" prefHeight="350"
                                   style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <columns>
                                <TableColumn text="Ressource" fx:id="titreColumn" prefWidth="250"
                                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                                <TableColumn text="Note" fx:id="noteColumn" prefWidth="150"
                                             style="-fx-font-size: 14px;"/>
                                <TableColumn text="Satisfaction" fx:id="satisfactionColumn" prefWidth="200"
                                             style="-fx-font-size: 14px;"/>
                            </columns>
                        </TableView>
                        <!-- Graphique des évaluations (BarChart) -->
                        <StackPane prefWidth="600" prefHeight="350"
                                   style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <BarChart fx:id="evaluationChart">
                                <xAxis>
                                    <CategoryAxis fx:id="xAxis"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="yAxis" label="Note"/>
                                </yAxis>
                            </BarChart>
                        </StackPane>
                    </HBox>
                    <HBox spacing="30">
                        <VBox spacing="15" prefWidth="600" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <Label text="Top Ressources" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                            <TableView fx:id="bestRatedTable" prefHeight="200" style="-fx-background-color: white; -fx-background-radius: 10;">
                                <columns>
                                    <TableColumn text="Titre" fx:id="bestRatedTitleColumn" prefWidth="250" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                                    <TableColumn text="Note" fx:id="bestRatedNoteColumn" prefWidth="150" style="-fx-font-size: 14px;"/>
                                </columns>
                            </TableView>
                        </VBox>
                        <VBox spacing="15" prefWidth="600" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <Label text="Ressources à Améliorer" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #c62828;"/>
                            <TableView fx:id="worstRatedTable" prefHeight="200" style="-fx-background-color: white; -fx-background-radius: 10;">
                                <columns>
                                    <TableColumn text="Titre" fx:id="worstRatedTitleColumn" prefWidth="250" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                                    <TableColumn text="Note" fx:id="worstRatedNoteColumn" prefWidth="150" style="-fx-font-size: 14px;"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Onglet Schémas et Tendances -->
            <Tab text="Schémas">
                <VBox spacing="30" alignment="CENTER" style="-fx-padding: 20;">
                    <Label text="Schéma de Satisfaction" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
                    <HBox spacing="30" alignment="CENTER">
                        <!-- Diagramme circulaire (PieChart) -->
                        <StackPane prefWidth="400" prefHeight="400"
                                   style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <PieChart fx:id="satisfactionPieChart"/>
                        </StackPane>
                        <!-- Graphique en ligne (LineChart) pour la tendance -->
                        <StackPane prefWidth="400" prefHeight="400"
                                   style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.5, 3, 3);">
                            <LineChart fx:id="trendLineChart">
                                <xAxis>
                                    <CategoryAxis fx:id="lineChartXAxis"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="lineChartYAxis" label="Satisfaction"/>
                                </yAxis>
                            </LineChart>
                        </StackPane>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Bottom: Pied de page / Statut -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #e0f7fa; -fx-background-radius: 10;">
            <Label text="© 2025 Mon Application" style="-fx-font-size: 14px; -fx-text-fill: #424242;"/>
            <Label text="Version 1.0" style="-fx-font-size: 14px; -fx-text-fill: #424242;"/>
        </HBox>
    </bottom>
</BorderPane>
