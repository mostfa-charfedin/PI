<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddPostController">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
            <Label text="Add a New Post" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="txtContent" promptText="Enter post content" />
            <Button fx:id="submitButton" text="Submit" onAction="#submitPost" />
        </VBox>
    </children>
</AnchorPane>
