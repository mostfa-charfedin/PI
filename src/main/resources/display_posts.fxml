<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="Style.css" fx:controller="Controllers.DisplayPostsController" style="-fx-background-color: linear-gradient(to bottom, #B3D9FF, #8AB0D1);">
    <children>
        <VBox fx:id="mainContainer" spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" >
            <Label text="Publications" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
            <ListView fx:id="listViewPublications" prefHeight="300" style="-fx-background-color: #E1F5FE; -fx-border-radius: 8px; -fx-selection-bar: #1976D2; -fx-text-fill: #2C3E50;" />
            <VBox spacing="5">
                <Button text="Add Post" onAction="#openAddPost" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 0);" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
