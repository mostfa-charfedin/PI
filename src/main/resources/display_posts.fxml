<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="Style.css" fx:controller="controller.DisplayPostsController">

    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400" styleClass="vbox-container">
            <Label text="Publications" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="header-label" />
            <ListView fx:id="listViewPublications" prefHeight="300" styleClass="list-view" />
            <Button text="Add Post" onAction="#openAddPost" styleClass="button-add-post" />
        </VBox>
    </children>
</AnchorPane>
