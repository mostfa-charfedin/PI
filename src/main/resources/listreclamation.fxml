<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="494.0" prefWidth="502.0" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.listreclamationController">
    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1850F8; -fx-effect: dropshadow(gaussian, #3e5bb2, 10, 0.5, 2, 2); -fx-padding: 10;" text="List of Claims" />

    <!-- Filters -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #d7dae3; -fx-border-radius: 10px; -fx-padding: 12;">
        <Label style="-fx-font-size: 16px; -fx-text-fill: #1850F8; -fx-font-weight: bold;" text="Select Status:" />
        <ComboBox fx:id="statusComboBox" promptText="Select status" style="-fx-background-color: white; -fx-border-color: #3e5bb2; -fx-border-radius: 8px; -fx-font-size: 14px;" />
    </HBox>

    <!-- List of claims -->
    <ListView fx:id="reclamationListView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250" prefWidth="449.0" style="-fx-background-color: #d7dae3; -fx-border-radius: 15px; -fx-border-color: #3e5bb2; -fx-border-width: 2px; -fx-font-size: 14px; -fx-padding: 10;">
        <items>
            <!-- The ListView items will be set programmatically in the controller -->
        </items>
    </ListView>
    <Button fx:id="updateStatusButton" onAction="#handleUpdateStatus" text="Update Status" />
</VBox>
