<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="721.0" prefWidth="665.0" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReclamationController">
    <!-- Title with simple gray color -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #808080; -fx-padding: 10;" text="Claims Management" />

    <!-- List of claims with rounded borders and soft background -->
    <ListView fx:id="listView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="109.0" prefWidth="660.0" style="-fx-background-color: #d7dae3; -fx-border-radius: 15px;         -fx-border-color: #3e5bb2; -fx-border-width: 2px; -fx-font-size: 14px; -fx-padding: 10;" />

    <!-- Comment section with gray titles -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #d7dae3; -fx-border-radius: 10px; -fx-padding: 12;">
        <Label style="-fx-font-size: 16px; -fx-text-fill: #808080; -fx-font-weight: bold;" text="Comment:" />
        <TextField fx:id="commentaireField" promptText="Enter comment" style="-fx-background-color: white;             -fx-border-color: #3e5bb2; -fx-border-radius: 8px; -fx-font-size: 14px;" />
    </HBox>

    <!-- Date section with gray titles -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #d7dae3; -fx-border-radius: 10px; -fx-padding: 12;">
        <Label style="-fx-font-size: 16px; -fx-text-fill: #808080; -fx-font-weight: bold;" text="Date:" />
        <DatePicker fx:id="dateField" style="-fx-background-color: white; -fx-border-color: #3e5bb2;             -fx-border-radius: 8px; -fx-font-size: 14px;" />
    </HBox>

    <!-- Buttons section with modern layout and custom button colors -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #d7dae3; -fx-padding: 20;">
        <Button onAction="#ajouterReclamation" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 12px;                 -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, #28a745, 15, 0.5, 0, 2);" text="Add Claim" />
        <Button onAction="#supprimerReclamation" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 12px;                 -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, #dc3545, 15, 0.5, 0, 2);" text="Delete Claim" />
    </HBox>
</VBox>
